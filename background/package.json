  },
  "devDependencies": {
    "@reduxjs/toolkit": "^1.6.1",
    "@types/webextension-polyfill": "^0.8.0",
    "ajv-cli": "^5.0.0",
    "crypto-browserify": "^3.12.0",
    "mockzilla": "^0.12.0",
    "mockzilla-webextension": "^0.13.0",
