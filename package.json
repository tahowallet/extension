{
  "name": "@tallyho/tally-extension",
  "private": true,
  "version": "0.66.0",
  "description": "Taho, the community owned and operated Web3 wallet.",
  "main": "index.js",
  "repository": "git@github.com:thesis/tally-extension.git",
  "author": "Matt Luongo <matt@thesis.co>",
  "license": "GPL-3.0",
  "keywords": [
    "ethereum",
    "bitcoin",
    "cryptocurrency",
    "wallet",
    "web3",
    "dapp"
  ],
  "scripts": {
    "start": "run-p -n -l devtools \"dev {@}\" --",
    "generate:validators": "ts-node background/generate-validators.ts",
    "build": "bun run build.ts --production",
    "dev": "bun run build.ts --watch",
    "typecheck": "tsc --noEmit",
    "devtools": "redux-devtools --hostname=localhost --port=8000",
    "lint": "run-p lint:*",
    "lint-fix": "run-p lint:*:fix",
    "lint:js": "oxlint --type-aware .",
    "lint:js:fix": "oxlint --type-aware --fix .",
    "lint:format": "oxfmt --check .",
    "lint:format:fix": "oxfmt --write .",
    "test": "bun run test:unit && bun run test:integration && bun run test:ui",
    "test:integration": "echo \"> Running Integration Tests\" && bash scripts/run-tests-isolated.sh integration.test",
    "test:unit": "echo \"> Running Unit Tests\" && bun test \"unit.test\"",
    "test:ui": "echo \"> Running UI Tests\" && bash scripts/run-tests-isolated.sh .test.tsx",
    "test:e2e": "echo \"> Running e2e Tests\" && run-s e2e:*",
    "e2e:regular": "echo \"> Running base e2e Tests\" && playwright test --grep-invert '@testnet|@fork'",
    "e2e:testnet": "echo \"> Running testnet e2e Tests\" && playwright test --grep @testnet",
    "e2e:fork": "echo \"> Running fork e2e Tests\" && playwright test --grep @fork",
    "preversion": "(which jq >&1 && which yq >&1) || (echo 'You must install jq and yq; scripts/macos-setup.sh for macOS.' && exit 1)",
    "version": "scripts/update-version.sh",
    "postversion": "git push --tags origin release-$npm_package_version",
    "postinstall": "playwright install chromium"
  },
  "workspaces": [
    "ui",
    "background",
    "provider-bridge",
    "provider-bridge-shared",
    "window-provider"
  ],
  "dependencies": {
    "@ethersproject/providers": "5.7.2",
    "@fortawesome/fontawesome-free": "^5.15.2",
    "@reduxjs/toolkit": "^1.9.4",
    "@tallyho/provider-bridge": "0.0.1",
    "@tallyho/provider-bridge-shared": "0.0.1",
    "@tallyho/tally-background": "0.0.1",
    "@tallyho/tally-ui": "0.0.1",
    "@tallyho/window-provider": "0.0.1",
    "buffer": "^6.0.3",
    "react": "^18.2.0",
    "sinon": "^14.0.1",
    "webext-redux": "^4.0.0",
    "webextension-polyfill": "^0.12.0"
  },
  "resolutions": {
    "@ledgerhq/devices": "8.10.0"
  },
  "patchedDependencies": {
    "jsan@3.1.14": "patches/jsan@3.1.14.patch",
    "@ethersproject/providers@5.7.2": "patches/@ethersproject%2Fproviders@5.7.2.patch",
    "@ledgerhq/hw-app-eth@6.33.4": "patches/@ledgerhq%2Fhw-app-eth@6.33.4.patch",
    "webext-redux@4.0.0": "patches/webext-redux@4.0.0.patch"
  },
  "devDependencies": {
    "@babel/core": "^7.22.11",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.11",
    "@playwright/test": "^1.57.0",
    "@redux-devtools/cli": "^2.0.0",
    "@types/archiver": "^5.1.0",
    "@types/bun": "^1.0.0",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/react-router-dom": "^5.3.1",
    "@types/remote-redux-devtools": "^0.5.5",
    "@types/sharp": "^0.32.0",
    "archiver": "^5.3.0",
    "crypto-browserify": "^3.12.1",
    "dedent-js": "^1.0.1",
    "dexie": "^3.0.4",
    "dotenv-defaults": "^2.0.2",
    "ethers": "5.7.2",
    "fake-indexeddb": "^4.0.0",
    "happy-dom": "^17.0.0",
    "install": "^0.13.0",
    "jest-webextension-mock": "^3.7.22",
    "npm": "^7.5.6",
    "npm-run-all": "^4.1.5",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.15.0",
    "process": "^0.11.10",
    "sharp": "^0.34.5",
    "stream-browserify": "^3.0.0",
    "styled-jsx": "^5.1.2",
    "typescript": "5.2.2",
    "webpack-merge": "^5.8.0"
  }
}
