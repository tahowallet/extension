{
  "name": "Tally",
  "version": "0.0.0",
  "description": "The community owned and operated Web3 wallet.",
  "homepage_url": "https://tally.cash",
  "author": "https://tally.cash",
  "manifest_version": 2,
  "minimum_chrome_version": "74",
  "applications": {
    "gecko": {
      "id": "webextension@tally.cash",
      "strict_min_version": "67.0"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+T",
        "mac": "Alt+Shift+T",
        "chromeos": "Alt+Shift+T",
        "linux": "Alt+Shift+T"
      }
    }
  },
  "browser_action": {
    "default_title": "Tally",
    "default_popup": "public/popup.html"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "http://localhost:8545/",
    "https://*.infura.io/",
    "activeTab",
    "webRequest",
    "*://*.eth/",
    "tabs",
    "clipboardWrite",
    "clipboardRead",
    "notifications"
  ],
  "web_accessible_resources": [
    "inpage.js"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "bg-libs.js",
      "background.js"
    ]
  }
}
